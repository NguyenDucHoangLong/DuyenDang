<div id="slide-banner">
    <div id="bigPic">
        <img width="100%" alt="" src="~/Slide-Index/image1.jpg">
        <img width="100%" alt="" src="~/Slide-Index/image2.jpg">
        <img width="100%" alt="" src="~/Slide-Index/image3.jpg">
        <img width="100%" alt="" src="~/Slide-Index/image4.jpg">

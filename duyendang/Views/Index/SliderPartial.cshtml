    </div>
</div>
<table border="0" cellpadding="0" cellspacing="0" width="1200px" align="center" style="margin-top: 550px;">
    <tr>
        <td>
            <div id="thumb-slide" align="center">

                <ul id="thumbs">
                    <li class="active" rel="1"><img alt="" src="~/Slide-Index/thumb-01.jpg"> </li>
                    <li rel="2"><img alt="" src="~/Slide-Index/thumb-02.jpg"> </li>
                    <li rel="3"><img alt="" src="~/Slide-Index/thumb-03.jpg"> </li>
                    <li rel="4"><img alt="" src="~/Slide-Index/thumb-04.jpg"> </li>
                    <li rel="5"><img alt="" src="~/Slide-Index/thumb-05.jpg"> </li>
                </ul>

                <script type="text/javascript">
                        var currentImage;
                        var currentIndex = -1;
                        var interval;
                        function showImage(index) {
                            if (index < $('#bigPic img').length) {
                                var indexImage = $('#bigPic img')[index]
                                if (currentImage) {
                                    if (currentImage != indexImage) {
                                        $(currentImage).css('z-index', 2);
                                        clearTimeout(myTimer);
                                        $(currentImage).fadeOut(250, function () {
                                            myTimer = setTimeout("showNext()", 3000);
                                            $(this).css({ 'display': 'none', 'z-index': 1 })
                                        });
                                    }
                                }
                                $(indexImage).css({ 'display': 'block', 'opacity': 1 });
                                currentImage = indexImage;
                                currentIndex = index;
                                $('#thumbs li').removeClass('active');
                                $($('#thumbs li')[index]).addClass('active');
                            }
                        }

                        function showNext() {
                            var len = $('#bigPic img').length;
                            var next = currentIndex < (len - 1) ? currentIndex + 1 : 0;
                            showImage(next);
                        }

                        var myTimer;

                        $(document).ready(function () {
                            myTimer = setTimeout("showNext()", 3000);
                            showNext(); //loads first image
                            $('#thumbs li').bind('click', function (e) {
                                var count = $(this).attr('rel');
                                showImage(parseInt(count) - 1);
                            });
                        });

                </script>
            </div>
        </td>
    </tr>
</table>
<!-- END - SLIDE SHOW -->
@using duyendang.Models;
@model List<information>

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/layout_admin.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <form action="Edit" method="post" enctype="multipart/form-data">
            @foreach (var item in Model)
            {
                <div class="row" style="margin: 20px 0;">
                    <div class="col-md-4">
                            <img src="@Url.Content("~/Images/" + item.image)" alt="imagePhotobook" width="100%" height="250" />
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <span class="btn btn-primary btn-file">
                                        Browse&hellip; <input type="file" name="file">
                                    </span>
                                </span>
                                <input type="text" class="form-control" readonly>
                            </div>
                    </div>
                    <div class="col-md-8 form-group">
                        <textarea rows="13" class="form-control" name="@item.id">@item.description</textarea>
                    </div>
                </div>
            }
            <div class="col-md-12 text-center" style="margin-top: 30px">
                <input class="btn btn-primary" type="submit" value="Lưu" style="width: 100px" />
            </div>
        </form>

    </div>

</div>

            $('#NoiDungTrong').text("Nội dung không được để trống");
            error++;
        }
        else {
            $('#NoiDungTrong').text("");
        }

        if (id == 'sdt' && (isNaN(value) == true || value.length < 10 || value.length > 13))
        {
            $('#sdtSai').text("Vui lòng kiểm tra lại số điện thoại");
            error++;
        }
        else {
            $('#sdtSai').text("");
        }

        if (error != 0) {
            return false;
        }
        else {
            return true;
        }
    });
</script>